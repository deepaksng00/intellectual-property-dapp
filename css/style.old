html, body {
  height: 100%;
  font-family: Arial, sans-serif;
  margin: 0px;
}

header {
  background-color: black;
  color: white;
  padding: 1%;
}

.title {
  margin: 0px;
  padding: 0px;
}

section {
  margin: 2%;
  display: block;
}

.reg-ip {
}

.attention {
  float: right;
  width: 20%;
  margin-right: 5%;
}

.attention-header {
  text-align: center;
  padding: 0;
  margin: 0;
  color: red;
}

form {
  display: inline-block;
  width: 100%;
}

button {
  font-size: 17px;
  padding: 6px;
  border: 1px solid black;
  float: left;
  border-radius: 5px;
  margin-left: 5px;
}

input[type=text] {
  float: left;
  padding: 6px;
  border: 1px solid black;
  font-size: 17px;
  border-radius: 5px;
  width: 31%;
}

.advanced-search {
  float: left;
  clear: left;
  margin-top: 20px;
}

hr.rounded {
  border-top: 8px solid #bbb;
  border-radius: 5px;
}

footer {
  background-color: black;
  color: white;
}

p, ol {
  font-size: 16px;
}

.smaller-text {
  font-size: 14px;
}

footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: black;
  color: white;
  padding: 2%;
}
